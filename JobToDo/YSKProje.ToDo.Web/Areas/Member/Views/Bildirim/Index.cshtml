@model List<BildirimListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

@if (Model.Count > 0)
{
    @foreach (var bildirim in Model)
    {
        <div class="alert alert-light p-3 my-2">
            <form method="post" class="my-1" asp-action="Index">
                <input type="hidden" value="@bildirim.Id" name="id" />
                <p class="lead">
                    @bildirim.Aciklama
                    <button type="submit" class="btn btn-light float-right">Okundu</button>
                </p>

            </form>

        </div>


    }
}
else
{
    <div class="alert alert-light p-3 my-2">


        <p class="lead">
            Okunmamış bildiriminiz bulunmamaktadır.

        </p>



    </div>
}

