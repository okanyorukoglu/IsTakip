
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

    <div class="row mt-3">

        <div class="col-md-6">
            <div class="card text-white bg-primary text-center mb-3">
                
                <div class="card-body">
                    <h4 class="card-title">Tamamladığınız Görev Sayısı</h4>
                    @if (ViewBag.TamamlananGorevSayisi > 0)
                    {
                        <p class="card-text display-4">@ViewBag.TamamlananGorevSayisi</p>
                        <p class="">
                            <a asp-action="Index" asp-controller="Gorev" class="btn btn-light btn-sm">
                                <i class="fas fa-chevron-circle-right mr-2"></i>İncele
                            </a>


                        </p>
                    }
                    else
                    {
                        <p class="card-text lead">Herhangi bir görev tamamlanmadı.</p>
                    }

                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-white bg-primary text-center mb-3">
                
                <div class="card-body">
                    <h4 class="card-title">Tamamlamanız Gereken Görev Sayısı</h4>
                    @if (ViewBag.TamamlananmasıGerekenGorevSayisi > 0)
                    {
                        <p class="card-text display-4">@ViewBag.TamamlananmasıGerekenGorevSayisi</p>
                        <p class="">
                            <a asp-action="Index" asp-controller="IsEmri" class="btn btn-light btn-sm">
                                <i class="fas fa-chevron-circle-right mr-2"></i>İncele
                            </a>


                        </p>
                    }
                    else
                    {
                        <p class="card-text lead">Herhangi bir iş emriniz bulunmamaktadır.</p>
                    }

                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-white bg-primary text-center mb-3">
                
                <div class="card-body">
                    <h4 class="card-title">Okumadığınız Bildirimler</h4>
                    @if (ViewBag.OkunmamisBildirimSayisi > 0)
                    {
                        <p class="card-text display-4">@ViewBag.OkunmamisBildirimSayisi</p>
                        <p class="">
                            <a asp-action="Index" asp-controller="IsEmri" class="btn btn-light btn-sm">
                                <i class="fas fa-chevron-circle-right mr-2"></i>İncele
                            </a>


                        </p>
                    }
                    else
                    {
                        <p> "Bütün bildirimler görüldü."</p>
                    }

                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card text-white bg-primary text-center mb-3">
                
                <div class="card-body">
                    <h4 class="card-title">Yazdığınız Rapor Sayısı</h4>
                    @if (ViewBag.RaporSayisi > 0)
                    {
                        <p class="card-text display-4">@ViewBag.RaporSayisi</p>
                    }
                    else
                    {
                        <p class="card-text lead">Herhangi bir rapor yazmamışsınız.</p>
                    }


                </div>
            </div>
        </div>
    </div>
    

