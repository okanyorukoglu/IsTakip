
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<div class="row mt-3">

    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3">

            <div class="card-body">
                <h4 class="card-title">Atanma Bekleyen Görev Sayısı</h4>
                @if (ViewBag.AtanmayiBekleyenGorevSayisi > 0)
                {
                    <p class="card-text display-4">@ViewBag.AtanmayiBekleyenGorevSayisi</p>
                    <p class="">
                        <a asp-action="Index" asp-controller="IsEmri" class="btn btn-light btn-sm">
                            <i class="fas fa-chevron-circle-right mr-2"></i>İncele
                        </a>


                    </p>
                }
                else
                {
                    <p class="card-text lead">Atanmamış görev bulunmamaktadır.</p>
                }

            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3">

            <div class="card-body">
                <h4 class="card-title">Tamamlanmış Görev Sayısı</h4>
                @if (ViewBag.TamamlanmisGorevSayisi > 0)
                {
                    <p class="card-text display-4">@ViewBag.TamamlanmisGorevSayisi</p>

                }
                else
                {
                    <p class="card-text lead">Tamamlanmış bir görev bulunmamaktadır.</p>
                }

            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3">

            <div class="card-body">
                <h4 class="card-title">Okunmamış Bildirim Sayısı</h4>
                @if (ViewBag.OkunmamisBildirimSayisi > 0)
                {
                    <p class="card-text display-4">@ViewBag.OkunmamisBildirimSayisi</p>
                    <a asp-action="Index" asp-controller="Bildirim" class="btn btn-light btn-sm">
                        <i class="fas fa-chevron-circle-right mr-2"></i>İncele
                    </a>

                }
                else
                {
                    <p class="card-text lead">Okunmamış bildirim bulunmamaktadır.</p>
                }

            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3">

            <div class="card-body">
                <h4 class="card-title">Rapor Sayısı</h4>
                @if (ViewBag.ToplamRaporSayisi > 0)
                {
                    <p class="card-text display-4">@ViewBag.ToplamRaporSayisi</p>

                }
                else
                {
                    <p class="card-text lead">Rapor bulunmamaktadır.</p>
                }

            </div>
        </div>
    </div>
</div>
